extends ../layouts/master

block title
	|#{title}

block styles
	link(rel='stylesheet', href='/stylesheets/admin.css')

block scripts
	script(type='text/javascript',src='/javascripts/admin.js')

block content

	include ../includes/info-box

	header
		h1 #{header}

	section
		table.style3
			tr.style3
					th.style3 Project name
					th.style3 Allotted Student name
					th.style3 Over write
					th.style3 Student ID
					th.style3 Primary Major
					th.style3 Secondary Major
					th.style3 Level In School
					th.style3 Grad Date
					th.style3 GPA
					th.style3 Gender
					th.style3 Ethnicity
					th.style3 Previous Experience
					th.style3 Other Employment
					th.style3 Student's Preferences
			tr.style3
				each project in projects
					tr
						td.style3
							p#projectname #{project.description}
						td.style3 
							select.level#AllottedStudentName(name='AllottedStudentName')
								option(value='', selected='selected') 
									each application in applications
										option(value=application.id) #{application.name}
						td.style3
							input#Overwrite(type='checkbox', name='overwrite', value='Yes'  checked=false)
						td.style3
							p#AllottedStudentId
						td.style3
							p#AllottedStudentPrimaryMajor
						td.style3
							p#AllottedStudentSecondaryMajor
						td.style3
							p#AllottedStudentNextFallLevel
						td.style3
							p#AllottedStudentGradMonth/p#AllottedStudentGradYear
						td.style3
							p#AllottedStudentGPA
						td.style3
							p#AllottedStudentGender
						td.style3
							p#AllottedStudentRace
						td.style3
							p#AllottedStudentPrevResearchExp
						td.style3
							p#AllottedStudentPrevApplication
						td.style3
							p#AllottedStudentMostInterest
							p#AllottedStudentHighInterest
							p#AllottedStudentModerateInterest
							p#AllottedStudentLeastInterest
							p#AllottedStudentLowInterest
							

							
											
